<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%"
		 label="Consulta"
		 horizontalAlign="right"
		 creationComplete="creationCompleteHandler(event)">
	<mx:Script>
		<![CDATA[
			import events.GenericEvent;
			
			import model.SolicitudServicioMaquilado;
			import model.Util;
			
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.events.CloseEvent;
			import mx.events.FlexEvent;
			import mx.rpc.events.FaultEvent;
			import mx.rpc.events.ResultEvent;
			
			[Bindable]
			private var items:ArrayCollection = null;
			
			private var solicitudServicioMaquilado:SolicitudServicioMaquilado;
			
			protected function responseGetAll_resultHandler(event:ResultEvent):void
			{
				items = event.result as ArrayCollection;
			}
			
			protected function solicitudServicioMaquiladoService_faultHandler(event:FaultEvent):void
			{
				Util.showErrorMessage( Util.splitException( event.fault.faultString ) );
			}
			
			protected function creationCompleteHandler(event:FlexEvent):void
			{
				this.executeQuery();
			}
			
			protected function datagrid_doubleClickHandler(event:MouseEvent):void
			{
				var item:SolicitudServicioMaquilado = this.datagrid.selectedItem as SolicitudServicioMaquilado;
				if( item == null ){
					return;
				}
				this.responseGetItem.token = this.solicitudServicioMaquiladoService.getItem( item.id );
			}
			
			protected function responseGetItem_resultHandler(event:ResultEvent):void
			{
				var item:SolicitudServicioMaquilado = event.result as SolicitudServicioMaquilado;
				if( item == null ){
					return;
				}
				var genericEvent:GenericEvent = new GenericEvent("maquiladoraServiceRequestDetail");
				genericEvent.information = item;
				this.dispatchEvent( genericEvent );
			}
			
			public function executeQuery():void
			{
				this.responseGetAll.token = this.solicitudServicioMaquiladoService.getAll();
			}
			
			protected function btnDelete_clickHandler(event:MouseEvent):void
			{
				if( this.datagrid.selectedItems == null ||
					this.datagrid.selectedItems.length == 0 ){
					Util.showErrorMessage("Debe seleccionar elementos de la tabla.");
					return;
				}
				Alert.show("Confirme si desea eliminar los elementos.","Advertencia",Alert.YES+Alert.NO,this, deleteItems);
			}
			
			private function deleteItems(event:CloseEvent):void
			{
				if( event.detail == Alert.NO ){
					return;
				}
				var items:ArrayCollection = Util.selectedIDs( this.datagrid.selectedItems ); 
				this.responseDeleteItems.token = this.solicitudServicioMaquiladoService.deleteItems( items );
			}
			
			protected function responseDeleteItems_resultHandler(event:ResultEvent):void
			{
				this.executeQuery();
			}
			
			private function labelFunctionGenerico(item:Object, column:DataGridColumn):String{
				return Util.extractToText( item, column.dataField );
			}
			
			private function labelFunctionDate(object:Object, column:DataGridColumn):String{
				return Util.formatDateToString( object[column.dataField] );
			}
			
			private function labelFunctionIDProyecto(item:Object, column:DataGridColumn):String{
				return Util.getIDConectelFormat( Util.extractObject(item, column.dataField) );
			}
		]]>
	</mx:Script>
	<mx:Metadata>
		[Event(name="maquiladoraServiceRequestDetail", type="events.GenericEvent")]
	</mx:Metadata>
	<mx:HBox width="895" height="100%">
	<mx:DataGrid id="datagrid" width="2000" height="100%" dataProvider="{items}"
				 doubleClickEnabled="true" doubleClick="datagrid_doubleClickHandler(event)"
				 allowMultipleSelection="true"
				 >
		<mx:columns>
			<mx:DataGridColumn id="dtgID" headerText="{'ID'}"
							   dataField="id"
							   textAlign="right"
							   width="80"/>
			<mx:DataGridColumn id="dtgRequestDate" headerText="{'Fecha\nSolicitud'}"
							   dataField="fecha"
							   labelFunction="{Util.labelFunctionDate}"
							   width="80"
							   textAlign="center"/>
			<mx:DataGridColumn id="dtgParentProject" headerText="{'Proyecto\nPadre'}"
							   dataField="proyectoPadre.descripcion"
							   width="130"/>
			<mx:DataGridColumn id="dtgProjectID" headerText="{'ID\nProyecto'}"
							   dataField="proyecto.id"
							   labelFunction="labelFunctionIDProyecto"
							   width="130"/>
			<mx:DataGridColumn id="dtgProjectState" headerText="{'Validación\nProyecto'}"
							   dataField="proyecto.estado.etiqueta"/>
			<mx:DataGridColumn id="dtgCategoria" headerText="Categoria"
							   dataField="proyecto.categoria.etiqueta"
							   />
			<mx:DataGridColumn id="dtgClient" headerText="Cliente"
							   dataField="proyecto.producto.cliente.nombreComercial"
							   />
			<mx:DataGridColumn id="dtgProjectType" headerText="{'Tipo de\nProyecto'}"
							   dataField="proyecto.producto.tipoProyecto"
							   />
			<mx:DataGridColumn id="dtgTechnology" headerText="Tecnología"
							   dataField="proyecto.producto.teconologia"
							   />
			<mx:DataGridColumn id="dtgEquipment" headerText="Equipo"
							   dataField="proyecto.producto.equipo"
							   />
			<mx:DataGridColumn id="dtgActivity" headerText="{'Actividad\na Realizar'}" width="180"
							   dataField="proyecto.producto.actividadRealizar"
							   />
			<mx:DataGridColumn id="dtgModel" headerText="Modelo"
							   dataField="proyecto.producto.modelo"
							   />
			<mx:DataGridColumn id="dtgServiceDescription" headerText="{'Descripción\ndel Servicio'}"
							   dataField="proyecto.producto.descripcionServicio"
							   width="80"/>
			<mx:DataGridColumn id="dtgServiceType" headerText="{'Tipo de\nServicio'}"
							   dataField="proyecto.producto.tipoServicio"
							   />	
			<mx:DataGridColumn id="dtgSite" headerText="{'Central\no Sitio'}"
							   dataField="proyecto.centralSitio"
							   />
		</mx:columns>
	</mx:DataGrid>
	</mx:HBox>
	<mx:HBox>
		<mx:Button id="btnDelete" label="Eliminar" click="btnDelete_clickHandler(event)"/>
	</mx:HBox>
	<mx:RemoteObject id="solicitudServicioMaquiladoService" destination="solicitudServicioMaquiladoService" fault="solicitudServicioMaquiladoService_faultHandler(event)"
					 showBusyCursor="true"/>
	<mx:CallResponder id="responseGetAll" result="responseGetAll_resultHandler(event)"/>
	<mx:CallResponder id="responseGetItem" result="responseGetItem_resultHandler(event)"/>
	<mx:CallResponder id="responseDeleteItems" result="responseDeleteItems_resultHandler(event)"/>
</mx:VBox>
