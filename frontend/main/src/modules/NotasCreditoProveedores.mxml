<?xml version="1.0" encoding="utf-8"?>
<mx:Module xmlns:mx="http://www.adobe.com/2006/mxml" layout="vertical"
		   width="700" height="500"
		   xmlns:notascreditoproveedores="components.notascreditoproveedores.*"
		   creationComplete="creationCompleteHandler(event)">
	<mx:Script>
		<![CDATA[
			import events.GenericEvent;
			
			import model.NotaCreditoProveedor;
			
			import mx.events.FlexEvent;
			
			protected function creationCompleteHandler(event:FlexEvent):void
			{
				
			}
			
			protected function consult_creditNoteDetailHandler(event:GenericEvent):void
			{
				this.detail.creditNote = event.information as NotaCreditoProveedor;
				this.navigator.selectedChild = this.detail;
			}
			
			protected function register_creditNoteNewHandler(event:Event):void
			{
				this.navigator.selectedChild = this.consult;
				this.consult.executeQuery();
			}
			
			protected function detail_creditNoteUpdatedHandler(event:Event):void
			{
				this.navigator.selectedChild = this.consult;
				this.consult.executeQuery();
			}
		]]>
	</mx:Script>
	<mx:TabNavigator id="navigator" width="100%" height="100%" creationPolicy="all">
		<notascreditoproveedores:Consult id="consult" creditNoteDetail="consult_creditNoteDetailHandler(event)"/>
		<notascreditoproveedores:CreditNote id="detail" update="true" creditNoteUpdated="detail_creditNoteUpdatedHandler(event)"/>
		<notascreditoproveedores:CreditNote id="register" registrer="true" creditNoteNew="register_creditNoteNewHandler(event)"/>
	</mx:TabNavigator>
</mx:Module>
