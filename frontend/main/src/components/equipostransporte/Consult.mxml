<?xml version="1.0" encoding="ISO-8859-1"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%"
		 label="Consulta"
		 horizontalAlign="right"
		 creationComplete="creationCompleteHandler(event)">
	<mx:Script>
		<![CDATA[
			import events.GenericEvent;
			
			import model.EquipoTransporte;
			import model.Util;
			
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.events.CloseEvent;
			import mx.events.FlexEvent;
			import mx.rpc.events.FaultEvent;
			import mx.rpc.events.ResultEvent;
			
			[Bindable]
			private var items:ArrayCollection = null;
			
			private var equipoTransporte:EquipoTransporte;
			
			protected function responseGetAll_resultHandler(event:ResultEvent):void
			{
				items = event.result as ArrayCollection;
			}
			
			protected function equipoTransporteService_faultHandler(event:FaultEvent):void
			{
				Util.showErrorMessage( Util.splitException( event.fault.faultString ) );
			}
			
			protected function creationCompleteHandler(event:FlexEvent):void
			{
				this.executeQuery();
			}
			
			protected function datagrid_doubleClickHandler(event:MouseEvent):void
			{
				var item:EquipoTransporte = this.datagrid.selectedItem as EquipoTransporte;
				if( item == null ){
					return;
				}
				this.responseGetItem.token = this.equipoTransporteService.getItem( item.id );
			}
			
			protected function responseGetItem_resultHandler(event:ResultEvent):void
			{
				var item:EquipoTransporte = event.result as EquipoTransporte;
				if( item == null ){
					return;
				}
				var genericEvent:GenericEvent = new GenericEvent("transportEquipmentDetail");
				genericEvent.information = item;
				this.dispatchEvent( genericEvent );
			}
			
			public function executeQuery():void
			{
				this.responseGetAll.token = this.equipoTransporteService.getAll();
			}
			
			protected function btnDelete_clickHandler(event:MouseEvent):void
			{
				if( this.datagrid.selectedItems == null ||
					this.datagrid.selectedItems.length == 0 ){
					Util.showErrorMessage("Debe seleccionar elementos de la tabla.");
					return;
				}
				Alert.show("Confirme si desea eliminar los elementos.","Advertencia",Alert.YES+Alert.NO,this, deleteItems);
			}
			
			private function deleteItems(event:CloseEvent):void
			{
				if( event.detail == Alert.NO ){
					return;
				}
				var items:ArrayCollection = Util.selectedIDs( this.datagrid.selectedItems ); 
				this.responseDeleteItems.token = this.equipoTransporteService.deleteItems( items );
			}
			
			protected function responseDeleteItems_resultHandler(event:ResultEvent):void
			{
				this.executeQuery();
			}
			
			private function labelFunctionGenerico(item:Object, column:DataGridColumn):String{
				return Util.extractToText( item, column.dataField );
			}
			
			protected function btnExport_clickHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				
			}
			
		]]>
	</mx:Script>
	<mx:Metadata>
		[Event(name="transportEquipmentDetail", type="events.GenericEvent")]
	</mx:Metadata>
	<mx:HBox width="{Util.getGreatGrandParentWidthLess(this)}" height="100%">
	<mx:DataGrid id="datagrid" width="1800" height="100%" dataProvider="{items}"
				 doubleClickEnabled="true" doubleClick="datagrid_doubleClickHandler(event)"
				 allowMultipleSelection="true">
		<mx:columns>
			<mx:DataGridColumn id="dtgCode" headerText="Código"
							   dataField="codigo"
							   width="100"/>
			<mx:DataGridColumn id="dtgFamily" headerText="{'Grupo o\nFamilia'}"
							   width="160"
							   dataField="grupofamiliab.etiqueta"
							   labelFunction="labelFunctionGenerico"/>
			<mx:DataGridColumn id="dtgDescription" headerText="Descripción"
							   dataField="descripcion"
							   width="200"/>
			<mx:DataGridColumn headerText="{'No. de Serie'}"
							   dataField="noSerie"
							   width="120"/>
			<mx:DataGridColumn id="dtgTrade" headerText="Marca"
							   dataField="marca"
							   width="120"/>
			<mx:DataGridColumn id="dtgModel" headerText="Modelo"
							   dataField="modelo"
							   width="120"/>
			<mx:DataGridColumn id="dtgPlaces" headerText="{'Número\nde Placas'}"
							   dataField="noPlacas"
							   width="120"/>
			<mx:DataGridColumn headerText="{'No. de Tarjeta\nde Circulación'}"
							   dataField="noTarjetaCirculacion"
							   width="120"/>
			<mx:DataGridColumn headerText="Ubicación"
							   dataField="ubicacionb.etiqueta"
							   width="120"/>
			<mx:DataGridColumn headerText="Responsable"
							   dataField="responsable.nombreCompleto"
							   width="200"/>
			<mx:DataGridColumn headerText="Costo"
							   dataField="costo"
							   width="120"
							   textAlign="right"/>
			<mx:DataGridColumn id="dtgStatus" headerText="Estatus"
							   dataField="estatusb.etiqueta"
							   labelFunction="labelFunctionGenerico"
							   width="120"/>
			<mx:DataGridColumn headerText="{'Responsable\nMantenimiento\no Servicio'}"
							   dataField="tipomantenimiento.etiqueta"
							   width="120"/>
			<mx:DataGridColumn headerText="{'Fecha de\nMantenimiento\no Servicio'}"
							   dataField="fechaMantenimiento"
							   labelFunction="{Util.labelFunctionDate}"
							   width="120"
							   textAlign="center"/>
		</mx:columns>
	</mx:DataGrid>
	</mx:HBox>
	<mx:HBox>
		<mx:Button id="btnExport" label="Exportar" click="btnExport_clickHandler(event)"/>
		<mx:Button id="btnDelete" label="Eliminar" click="btnDelete_clickHandler(event)"/>
	</mx:HBox>
	<mx:RemoteObject id="equipoTransporteService" destination="equipoTransporteService" fault="equipoTransporteService_faultHandler(event)"
					 showBusyCursor="true"/>
	<mx:CallResponder id="responseGetAll" result="responseGetAll_resultHandler(event)"/>
	<mx:CallResponder id="responseGetItem" result="responseGetItem_resultHandler(event)"/>
	<mx:CallResponder id="responseDeleteItems" result="responseDeleteItems_resultHandler(event)"/>
</mx:VBox>
